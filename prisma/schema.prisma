generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @unique
  name      String
  email     String
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  links     Links[]
}

model Links {
  id           String        @id @unique
  name         String        @unique
  tunnelId     String
  tunnelSecret String
  userId       String
  user         Users         @relation(fields: [userId], references: [id])
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  connections  Connections[]
}

model Connections {
  hostUrl    String   @unique
  serviceUrl String
  linkId     String
  link       Links    @relation(fields: [linkId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
