generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  email     String   @id @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  links     Links[]
}

model Links {
  id                 String        @id @default(uuid())
  name               String        @unique
  tunnelId           String
  tunnelToken        String
  userEmail          String
  user               Users         @relation(fields: [userEmail], references: [email])
  subscriptionStatus String?
  subscriptionEndAt  DateTime?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  connections        Connections[]
}

enum Protocol {
  HTTP
  HTTPS
  TCP
  SSH
  RDP
  UNIX
  SMB
  HTTP_STATUS
  BASTION
}

model Connections {
  id              String   @id @default(uuid())
  name            String
  serviceIp       String
  servicePort     Int
  serviceProtocol Protocol
  recordId        String
  linkId          String
  link            Links    @relation(fields: [linkId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([name, linkId])
}

model Contacts {
  id        String   @id @default(uuid())
  name      String
  email     String
  subject   String
  message   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
